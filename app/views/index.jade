html
	head
		title= title
		link(href='/css/main.css', rel='stylesheet')
	body
		h1= title
		if isLoggedIn
			h3 You are Loggend in.
			form(name='logout', method='POST', action='logout')
				div
					input(type='submit', value='Logout')
		else
			form(name='login', method='POST', action='login')
				div
					label(for='email') อีเมล์ 
					input(name='email', type='email', placeholder='youremail@email')
				div
					label(for='password') พาสเวิสด์
					input(name='password', type='Password', placeholder='Password')
				div
					input(name='remember', type='checkbox', value='remember')
					| บันทึกการใช้งานระบบ
				div
					input(type='submit', value='ตกลง')


		img(src='/img/logo1.gif', alt='Logo')
