html
	head
		title= title
		link(href='/css/main.css', rel='stylesheet')
	body
		h1= title
		if username
			h2 Hello #{username}
			div
				form(name='logout', method='post', action='/logout')
					input(type='submit', value='Log Out')
		else
			div
				a(href='/signup') Sign UP
			div
				a(href='/login') Log In